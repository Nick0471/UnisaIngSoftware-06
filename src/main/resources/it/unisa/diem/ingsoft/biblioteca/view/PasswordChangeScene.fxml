<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="it.unisa.diem.ingsoft.biblioteca.controller.PasswordChangeSceneController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #2D3447; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo_progetto.jpg" />
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </ImageView>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Gestione Password" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <GridPane hgap="15.0" vgap="15.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="180.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="30.0" left="40.0" right="60.0" top="30.0" />
            </padding>
            <children>

                <Label text="Vecchia password:" textFill="#2d3447">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="currentPassword" promptText="Inserisci la password attuale"
                               style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;"
                               GridPane.columnIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>

                <Label text="Nuova password:" textFill="#2d3447" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="newPassword" promptText="Crea una nuova password"
                               style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;"
                               GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>

                <Label text="Conferma password:" textFill="#2d3447" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="newPasswordConfirm" promptText="Ripeti la nuova password"
                               style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;"
                               GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnReturn" mnemonicParsing="false" onAction="#handleReturn"
                        prefHeight="45.0" prefWidth="140.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                        text="Annulla">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Button>

                <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleGoToViewHomepage"
                        prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                        text="Aggiorna Password">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="40.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>