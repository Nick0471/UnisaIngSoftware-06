<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="it.unisa.diem.ingsoft.biblioteca.HomepageController" prefHeight="400.0" prefWidth="640.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">   
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@logo_progetto.jpg" />
               </image>
            </ImageView>
            
            <Label text="Biblioteca Universitaria">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleGoToViewProfile">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@settings.jpg" />
                     </image>
                  </ImageView>
               </graphic>
               </Button>

         </children>
         
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </top>

<center>
      <VBox alignment="TOP_CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </padding>
         
         <children>
            
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Bentornato!">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <Region VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnBook" maxHeight="60.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleGoToViewBooks" text="Catalogo libri" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnUser" maxHeight="60.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleGoToViewUsers" text="Lista utenti" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnLoan" maxHeight="60.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleGoToViewLoans" text="Prestiti attivi" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            
            <Region VBox.vgrow="ALWAYS" />
            <Region layoutX="60.0" layoutY="111.0" />

         </children>
      </VBox>
   </center>
</BorderPane>
