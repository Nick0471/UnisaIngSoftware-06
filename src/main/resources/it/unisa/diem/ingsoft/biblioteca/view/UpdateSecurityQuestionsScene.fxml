<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="it.unisa.diem.ingsoft.biblioteca.controller.UpdateSecurityQuestionsSceneController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="650.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #2D3447; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);"
              BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo_progetto.jpg" />
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Gestione Sicurezza" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <VBox maxWidth="550.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">

                    <effect>
                        <DropShadow color="#0000001a" height="20.0" radius="9.5" width="20.0" />
                    </effect>

                    <children>
                        <Label alignment="CENTER" maxWidth="Infinity" text="Aggiorna Domande di Sicurezza" textFill="#2d3447">
                            <font>
                                <Font name="Segoe UI Bold" size="22.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Label>

                        <Label alignment="CENTER" maxWidth="Infinity" text="Modifica le risposte per garantire il recupero dell'account." textFill="#7c8184" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <VBox spacing="8.0">
                            <children>
                                <Label text="1. Qual è il cognome da nubile di tua madre?" textFill="#2d3447">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="answer1Field" prefHeight="40.0" promptText="Inserisci nuova risposta..."
                                           style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #fafafa;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label text="2. Qual è il nome del tuo primo animale domestico?" textFill="#2d3447">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="answer2Field" prefHeight="40.0" promptText="Inserisci nuova risposta..."
                                           style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #fafafa;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label text="3. In che città ti sei diplomato?" textFill="#2d3447">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="answer3Field" prefHeight="40.0" promptText="Inserisci nuova risposta..."
                                           style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #fafafa;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </VBox>

                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel"
                                        prefHeight="45.0" prefWidth="140.0"
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                                        text="Annulla">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </Button>

                                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSaveAnswers"
                                        prefHeight="45.0" prefWidth="160.0"
                                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                                        text="Salva Risposte">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>