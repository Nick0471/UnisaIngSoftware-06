<BorderPane
        fx:controller="it.unisa.diem.ingsoft.biblioteca.controller.AccountUserSceneController"
        maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;"
        xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: #2D3447; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo_progetto.jpg" />
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Account Utente" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>

                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                    <effect>
                        <DropShadow color="#0000001a" height="10.0" radius="4.5" width="10.0" />
                    </effect>
                    <children>
                        <Label text="Dettagli Anagrafici" textFill="#2d3447">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        <Separator prefWidth="200.0">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </Separator>
                        <GridPane hgap="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Matricola:" textFill="#7c8184">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelMatricola" text="-" textFill="#2d3447" GridPane.columnIndex="1">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>

                                <Label text="Email:" textFill="#7c8184" GridPane.columnIndex="2">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelEmail" text="-" textFill="#2d3447" GridPane.columnIndex="3">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>

                                <Label text="Nome:" textFill="#7c8184" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelNome" text="-" textFill="#2d3447" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>

                                <Label text="Cognome:" textFill="#7c8184" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="labelCognome" text="-" textFill="#2d3447" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Prestiti Attivi (Non Restituiti)" textFill="#2d3447">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>

                        <TableView fx:id="loansTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnIsbn" maxWidth="150.0" minWidth="120.0" prefWidth="120.0" text="ISBN" />
                                <TableColumn fx:id="columnTitle" minWidth="200.0" prefWidth="250.0" text="Titolo Libro" />
                                <TableColumn fx:id="columnStart" maxWidth="120.0" minWidth="100.0" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Data Inizio" />
                                <TableColumn fx:id="columnDeadline" maxWidth="120.0" minWidth="100.0" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Scadenza" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <StackPane prefHeight="80.0" style="-fx-background-color: white; -fx-border-color: #ddd transparent transparent transparent;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnClose"
                        mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: transparent; -fx-text-fill: #2D3447; -fx-cursor: hand; -fx-border-color: #2D3447; -fx-border-radius: 5; -fx-border-width: 1;" text="â† Gestione Utenti" StackPane.alignment="CENTER_LEFT">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <StackPane.margin>
                        <Insets left="30.0" />
                    </StackPane.margin>
                    <padding>
                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                    </padding>
                </Button>
            </children>
        </StackPane>
    </bottom>

</BorderPane>